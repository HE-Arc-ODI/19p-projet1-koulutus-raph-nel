<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <File name="warn" fileName="logs/resources.log">
      <LevelRangeFilter minLevel="WARN" maxLevel="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
      <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %c - %msg%n"/>
    </File>
    <File name="fatal" fileName="logs/exceptions.log">
      <LevelRangeFilter minLevel="FATAL" maxLevel="FATAL" onMatch="ACCEPT" onMismatch="DENY"/>
      <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %c - %msg%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Root level="trace">
      <AppenderRef ref="warn"/>
      <AppenderRef ref="fatal"/>
    </Root>
  </Loggers>
</Configuration>